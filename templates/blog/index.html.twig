{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

    <div class="container border p-4">
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-success" name="btnSearch">Rechercher</button>
    {{ form_end(form) }}
    </div>

    <div class="container mt-4 border p-4">
        {{ form_start(formAdd) }}
        {{ form_widget(formAdd) }}
        <button type="submit" class="btn btn-info" name="btnSearch">Ajouter</button>
        {{ form_end(formAdd) }}
    </div>

    <div class="container mt-4">
    <h1>All articles from article s table : </h1>
    {% for article in articles %}
        <div>
            <h2>{{ loop.index }} / {{ article.title }} - Category : {{ article.category.name }}</h2>
            <p>{{ article.content }}</p>
        </div>
    {% endfor %}
    </div>
{% endblock %}
